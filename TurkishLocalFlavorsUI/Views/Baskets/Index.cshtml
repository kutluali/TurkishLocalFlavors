@model List<ResultBasketDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
    decimal basketTotalPrice = 0;
    decimal basketTotalPriceWithTax = 0;
    decimal tax = 0;
}

<body class="sub_page">
    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Menü</a>
                    <span class="breadcrumb-item active">Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        basketTotalPrice = Model.Sum(x => x.Price);
                        tax = basketTotalPrice / 100 * 10;
                        basketTotalPriceWithTax = basketTotalPrice + tax;
                        count++;
                        <tbody class="align-middle">
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 110px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-danger btn-minus" onclick="updateQuantity(@item.BasketID, @item.Count - 1)">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-white border text-center" value="@item.Count" id="quantity-@item.BasketID" style="width: 40px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-success btn-plus" onclick="updateQuantity(@item.BasketID, @item.Count + 1)" style="margin-left: -1px;">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>

                                <td class="align-middle">@item.Price</td>
                                <td class="align-middle">@item.TotalPrice</td>
                                <td class="align-middle btn-delete"><a class="btn btn-sm btn-danger" href="/Baskets/DeleteBasket/@item.BasketID"><i class="fa fa-times"></i></a></td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="col-log-4">
                <form>
                    <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-1 p-4" placeholder="Kupon Kodunuz" />
                        <div>
                            <a style="height:48px;padding-top:11px; margin-left:5px;" class="btn btn-warning" id="btncouponcode">Kuponu Uygula</a>
                        </div>
                    </div>
                </form>
                <br />
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-warning pr-3 px-2 py-1">Sepet Özeti</span>
                </h5>
                <div class="bg-light p-30 mb-5">
                    <div id="container" class="border-bottom pb-2 px-3 py-2">
                        <div class="d-flex justify-content-between mb-6">
                            <h6 class="px-2">Toplam Tutar</h6>
                            <h6 class="px-2"><span id="totalprice">@basketTotalPrice</span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between px-2">
                            <h6 class="font-weight-medium">Kdv Oranı</h6>
                            <h6 id="kdv" class="font-weight-medium">@tax</h6>₺
                        </div>
                        <br />
                    </div>
                    <div class="pt-2 px-3 py-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="px-2">Toplam Tutar</h5>
                            <h5 class="px-2"><span id="totalpricewithkdv">@basketTotalPriceWithTax</span>₺</h5>
                        </div>
                        <br />
                        <button id="btnchecked" class="btn btn-block btn-warning font-weight-bold my-3">Siparişi Tamamla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        <script>
            function updateQuantity(basketId, change) {
                // Mevcut adet değeri
                const quantityInput = document.getElementById(`quantity-${basketId}`);
                let newCount = parseInt(quantityInput.value) + change;

                if (newCount < 1) {
                    alert("Ürün miktarı sıfırdan az olamaz.");
                    return; // Ürün miktarının sıfırın altına inmesini engelle
                }

                // AJAX isteği
                $.ajax({
                    type: "POST",
                    url: "/Baskets/UpdateQuantity",
                    data: { basketId: basketId, count: newCount },
                    success: function (response) {
                        // Adet değerini güncelle
                        quantityInput.value = newCount;

                        // Sepet toplamını güncelle
                        updateTotal();
                    },
                    error: function (error) {
                        console.error("Ürün miktarı güncellenirken bir hata oluştu.", error);
                    }
                });
            }

        function updateTotal() {
            let totalPrice = 0;
            let totalItems = document.querySelectorAll("tbody tr");

            totalItems.forEach(item => {
                let price = parseFloat(item.querySelector("td:nth-child(4)").innerText);
                let quantity = parseInt(item.querySelector("input[type='text']").value);
                totalPrice += price * quantity;
            });

            let tax = totalPrice * 0.10; // %10 KDV
            let totalWithTax = totalPrice + tax;

            document.getElementById("totalprice").innerText = totalPrice.toFixed(2);
            document.getElementById("kdv").innerText = tax.toFixed(2);
            document.getElementById("totalpricewithkdv").innerText = totalWithTax.toFixed(2);
        }
    </script>

    </script>
</body>