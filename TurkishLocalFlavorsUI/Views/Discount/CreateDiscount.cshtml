@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirmli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirmli Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label >Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title"> <br />

                                <label >İndirim Oranını Giriniz</label>
                                <input type="number" class="form-control" asp-for="Amount" ><br />

                                <label >Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" ><br />

                                <label>Açıklama Alanı</label>
                                <textarea rows="5" class="form-control" asp-for="Description" ></textarea><br />

                                <label>İndirim Aktif mı ?</label><br />
                                <label class="form-radio-label">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="true" checked="">
                                    <span class="form-radio-sign">Evet</span>
                                </label>
                                <label class="form-radio-label ml-3">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="false">
                                    <span class="form-radio-sign">Hayır</span>
                                </label><br />

                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">İndirimli Ürünün Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
