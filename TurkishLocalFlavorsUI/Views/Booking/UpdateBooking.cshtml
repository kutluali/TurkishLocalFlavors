@model UpdateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="BookingID" />
                                <label for="Name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                                <br />

                                <label for="Phone">Telefon</label>
                                <input type="tel" class="form-control" asp-for="Phone" id="Phone"> <br />

                                <label for="Mail">Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail"><br />

                                <label for="PersonCount">Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="PersonCount"> <br />

                                <label for="Date">Rezervasyon Tarihi</label>
                                <input type="date" class="form-control" asp-for="Date" id="Date"> <br />
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Rezervasyon Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

