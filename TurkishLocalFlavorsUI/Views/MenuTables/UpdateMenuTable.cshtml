@model UpdateMenuTableDto
@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa Güncelleme Girşi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableID" />
                            <div class="form-group">
                                <label>Başlık Giriniz Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name"><br />

                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Masayı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

