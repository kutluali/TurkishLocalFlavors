@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda Alanı İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Alanı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label >Başlık Giriniz Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title"><br />
                            
                                <label >Açıklam Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea><br />

                                <label>Fotoğrafı Yükleyiniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl"><br />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Alanı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


