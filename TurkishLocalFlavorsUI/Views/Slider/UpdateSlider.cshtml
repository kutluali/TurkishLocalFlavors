@model UpdateSliderDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="SliderID" />
                                <label>1.Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1"><br />

                                <label>1.Başlığı  Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title2"><br />

                                <label>1.Başlığı  Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3"><br />

                                <label>1.Açıklamayı Giriniz</label>
                                <input class="form-control" asp-for="Description1" id="Description"><br />

                                <label>2.Açıklamayı Giriniz</label>
                                <input class="form-control" asp-for="Description2" id="Description"><br />

                                <label>3.Açıklamayı Giriniz</label>
                                <input class="form-control" asp-for="Description3" id="Description"><br />

                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Alanı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

