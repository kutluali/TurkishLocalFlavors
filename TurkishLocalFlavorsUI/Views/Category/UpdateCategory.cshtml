@model TurkishLocalFlavorsUI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <label for="categoryname">Kategori Güncelleme Sayfası</label>
                                <input type="text" class="form-control" asp-for="CategoryName">
                            </div>
                            <div class="form-check">
                                <label>Kategori Aktif mı ?</label><br />
                                <label class="form-radio-label">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="true" />
                                    <span class="form-radio-sign">Evet</span>
                                </label>
                                <label class="form-radio-label ml-3">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="false" />
                                    <span class="form-radio-sign">Hayır</span>
                                </label>

                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

